/**
 * CSS files with the .module.css suffix will be treated as CSS modules
 * and scoped locally.
 */

.pageWrapper {
  background: linear-gradient(135deg, #fff5f1 0%, #ffffff 50%, #fff8f5 100%);
  min-height: 100vh;
}

/* Hero Section */
.heroBanner {
  padding: 120px 0 80px;
  text-align: center;
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg, #F05E1C 0%, #ff8c42 100%);
}

.heroBanner::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at center, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: pulse 20s ease-in-out infinite;
}

.heroBanner::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  right: 0;
  height: 100px;
  background: linear-gradient(to bottom, transparent, #fff5f1);
  pointer-events: none;
}

@keyframes pulse {
  0%, 100% { transform: scale(1) rotate(0deg); }
  50% { transform: scale(1.1) rotate(180deg); }
}

.heroContent {
  position: relative;
  z-index: 1;
}

.heroTitle {
  font-size: 3.5rem !important;
  font-weight: 800 !important;
  color: white !important;
  text-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px !important;
  animation: fadeInUp 0.8s ease-out;
}

.heroSubtitle {
  font-size: 1.25rem;
  color: rgba(255, 255, 255, 0.95);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.8;
  animation: fadeInUp 0.8s ease-out 0.2s both;
  text-shadow: 0 1px 10px rgba(0, 0, 0, 0.1);
}

.heroAuthor {
  margin-top: 10px;
  font-style: italic;
  color: rgba(255, 255, 255, 0.9);
  opacity: 0.9;
  display: block;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Decorative Elements */
.decoration1 {
  position: absolute;
  top: 10%;
  right: 5%;
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1), transparent);
  filter: blur(100px);
  animation: float 20s ease-in-out infinite;
  pointer-events: none;
}

.decoration2 {
  position: absolute;
  bottom: 10%;
  left: 5%;
  width: 400px;
  height: 400px;
  background: radial-gradient(circle, rgba(255, 140, 66, 0.1), transparent);
  filter: blur(120px);
  animation: float 25s ease-in-out infinite reverse;
  pointer-events: none;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(30px, -30px) scale(1.1); }
  66% { transform: translate(-20px, 20px) scale(0.9); }
}

/* Responsive Design */
@media screen and (max-width: 768px) {
  .heroBanner {
    padding: 80px 0 60px;
  }

  .heroTitle {
    font-size: 2.5rem !important;
  }

  .heroSubtitle {
    font-size: 1.1rem;
    padding: 0 20px;
  }
}
